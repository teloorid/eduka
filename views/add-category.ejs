    <%- include('partials/header') %>
    <main class="main">
        <div class="application py-120">
            <div class="container">
                <div class="application-form">
                    <h3>Add Blog Category</h3>
                    <form action="/add-category" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Category Name</label>
                                    <input class="form-control" name="name" type="text"
                                           placeholder="Enter category name" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Post Count</label>
                                    <input class="form-control" name="post_count" type="number"
                                           placeholder="Enter post count" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <button type="submit" class="theme-btn">Add Category<i class="fas fa-arrow-right-long"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <%- include('partials/footer') %>
